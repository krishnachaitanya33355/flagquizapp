            android:layout_height="wrap_content"
            android:id="@+id/imageView53"
            android:src="@drawable/albania"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView53"
            android:layout_toEndOf="@+id/textView53"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" />
    </RelativeLayout>

    <Button
        android:onClick="butt531"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="albania"
        android:textAllCaps="true"
        android:id="@+id/button531"
        android:layout_marginTop="68dp"
        />

    <Button
        android:textAllCaps="true"
        android:onClick="butt532"
        android:layout_weight="1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bhutan"
        android:id="@+id/button532" />

    <Button
        android:textAllCaps="true"
        android:onClick="butt533"
        android:layout_weight="1"
